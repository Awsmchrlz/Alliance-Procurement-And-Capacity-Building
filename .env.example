# Database Configuration
DATABASE_URL=your_database_connection_string_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Supabase Storage
VITE_SUPABASE_EVIDENCE_BUCKET=registrations

# Email Service (Brevo) Configuration
BREVO_API_KEY=xkeysib-your-api-key-here
BREVO_SENDER_EMAIL=your-sender-email@domain.com
BREVO_SENDER_NAME="Your Organization Name"

# SMTP Configuration (Alternative to API)
BREVO_SMTP_SERVER=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_LOGIN=your-smtp-login@domain.com
BREVO_SMTP_KEY=your-smtp-key

# Application Configuration
NODE_ENV=development
PORT=3000

# Session Configuration
SESSION_SECRET=your-very-secure-session-secret-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Development/Production Flags
DEBUG=true
ENABLE_CORS=true

# Frontend Configuration (for Vite)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_SUPABASE_EVIDENCE_BUCKET=registrations
